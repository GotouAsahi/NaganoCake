<div class='row'>
  <div class="col">
    <div class="col-3 h4 mt-4 mb-4 bg-light text-black text-center">ジャンル一覧・追加</div>
    <%= render 'layouts/errors', obj: @genre %>
      <%= form_with model: @genre, url: admin_genres_path,method: :post,local: true  do |genre| %>
      <div class="form-group row my-4 d-flex align-items-center">
        <label for="genre_name" class="col-2 col-form-label">ジャンル名</label>
        <div class="col-3">
          <%= genre.text_field :name, placeholder: "ジャンル名",class:"form-control genre_name" %>
        </div>
          <%= genre.submit '新規登録', class:"btn btn-success btn-lg col-2" %>
      </div>
      <% end %>
    <table class="table col-5">
      <thead class="thead-light">
        <tr>
          <th colspan="2" class="h3 table-secondary text-black ">ジャンル</th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td class="col-2 h5 align-middle"><%= genre.name %></td>
            <td class="col-1"><%= link_to '編集する', edit_admin_genre_path(genre.id), class:"btn btn-success btn-lg" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>