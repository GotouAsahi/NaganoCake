<div class='row'>
  <div class="col">
    <div class="col-3 h4 mt-4 mb-4 bg-light text-black text-center">ジャンル編集</div>
    <%= render 'layouts/errors', obj: @genre %>
      <%= form_with model: @genre, url: admin_genre_path,method: :patch ,local: true do |genre| %>
      <div class="form-group row my-4 d-flex align-items-center">
        <label for="genre_name" class="col-2 col-form-label">ジャンル名</label>
        <div class="col-3">
          <%= genre.text_field :name, placeholder: "ジャンル名",class:"form-control genre_name" %>
        </div>
          <%= genre.submit '変更を保存', class:"btn btn-success btn-lg col-2" %>
      </div>
      <% end %>
  </div>
</div>