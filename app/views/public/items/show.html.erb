<div class='row'>
  <div class="col-3"></div>
  <div class="col-8">
    <div class="col h4 mt-5 mb-3 pl-0"></div>
    <%= render 'layouts/errors', obj: @cart_item %>
    <div class="row">
      <div class="col-5 align-self-center">
        <%= image_tag @item.get_image,size: "250x180" %>
      </div>
      <div class="col-7">
        <p class="h3 font-weight-bold mt-3 mb-3"><%= @item.name %></p>
        <p class="h5 h-25 font-weight-bold mt-3 mb-3"><%= @item.introduction %></p>
        <p class="h4 font-weight-bold mt-3 mb-3"><%= @item.add_tax_price.to_s(:delimited) %>(税込)</p>
        <%= form_with model: @cart_item, url: cart_items_path, method: :post, local: true do |cart_item| %>
        <div class="row">
          <div class="field col-6 mt-3 mb-3">
            <%= cart_item.hidden_field :item_id, :value => @item.id %>
            <%= cart_item.select :amount, *[1..20], { prompt: '個数選択' }, class: "form-control" %>
            </div>
          <div class="actions col mt-3 mb-3 d-flex align-items-center">
            <%= cart_item.submit "カートに入れる",class: 'btn btn-sm btn-success btn-block' %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>