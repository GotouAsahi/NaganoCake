<div class='row'>
  <div class="col">
    <div class="col-3 h4 mb-2 bg-light text-black text-center">新規会員登録</div>
    <%#= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= form_with model: @customer, url: customer_registration_path do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <div class="row">
        <div class="field col-3">名前</div>
        <div class="field col-1">
          <%= f.label "(姓)" %>
        </div>
        <div class="field col-3">
          <%= f.text_field :first_name, autofocus: true,placeholder: "令和", class: "name form-control mb-2" %>
        </div>
        <div class="field col-1">
          <%= f.label "(名)" %>
        </div>
        <div class="field col-3">
          <%= f.text_field :last_name, autofocus: true,placeholder: "道子", class: "name form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="field col-3">フリガナ</div>
        <div class="field col-1">
          <%= f.label "(セイ)" %>
        </div>
        <div class="field col-3">
          <%= f.text_field :first_kana, autofocus: true,placeholder: "レイワ",  class: "kana form-control mb-2" %>
        </div>
        <div class="field col-1">
          <%= f.label "(メイ)" %>
        </div>
        <div class="field col-3">
          <%= f.text_field :last_kana, autofocus: true,placeholder: "ミチコ",  class: "kana form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="field col-3">
          <%= f.label "メールアドレス" %>
          </div>
          <div class="field col-1"></div>
          <div class="field col-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "sample@example.com", class: "form-control mb-2" %>
          </div>
      </div>
      <div class="row">
        <div class="field col-3">
          <%= f.label "郵便番号(ハイフンなし)" %>
          </div>
          <div class="field col-1"></div>
          <div class="field col-3">
          <%= f.text_field :postal_code, autofocus: true,placeholder: "0000000",  class: "postal_code form-control mb-2" %>
          </div>
      </div>
      <div class="row">
        <div class="field col-3">
          <%= f.label "住所" %>
          </div>
          <div class="field col-1"></div>
          <div class="field col-7">
          <%= f.text_field :address, autofocus: true,placeholder: "東京都渋谷区代々木神園町0-0",  class: "address form-control mb-2" %>
          </div>
      </div>
      <div class="row">
        <div class="field col-3">
          <%= f.label "電話番号(ハイフンなし)" %>
          </div>
          <div class="field col-1"></div>
          <div class="field col-3">
          <%= f.text_field :telephone_number, autofocus: true,placeholder: "00000000000",  class: "telephone_number form-control mb-2" %>
          </div>
      </div>
      <div class="row">
        <div class="field col-3">
        <%= f.label :"パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
        </div>
        <div class="field col-1"></div>
        <div class="field col-3">
        <%= f.password_field :password, autocomplete: "new-password",class: "password form-control mb-2" %>
        </div>
      </div>
      <div class="row">
        <div class="field col-3">
          <%= f.label :"パスワード(確認用)" %>
          </div>
          <div class="field col-1"></div>
          <div class="field col-3">
          <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "password form-control mb-2" %>
        </div>
      </div>
      <div class="row">
        <div class="col-4"></div>
        <div class="actions col-3">
          <%= f.submit "新規登録",class: 'btn btn-sm btn-success btn-block' %>
        </div>
      </div>
    <% end %>
    <div class="col-4 h4 mb-2 bg-light text-black text-center">既に登録済みの方</div>
    <%= render "public/shared/links" %>からログインしてください。
  </div>
</div>