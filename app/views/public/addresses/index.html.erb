<div class='row'>
  <div class="col">
    <div class="col-3 h4 mt-4 mb-4 bg-light text-black text-center">ジャンル登録/一覧</div>
    <%= render 'layouts/errors', obj: @address %>
      <%= form_with model: @address, url: addresses_path,method: :post,local: true  do |address| %>
      <div class="form-group row my-4 d-flex align-items-center">
        <label for="address_name" class="col-3 col-form-label">郵便番号(ハイフンなし)</label>
        <div class="col-3">
          <%= address.text_field :postal_code, placeholder: "0000000",class:"form-control" %>
        </div>
      </div>
      <div class="form-group row my-4 d-flex align-items-center">
        <label for="address_name" class="col-3 col-form-label">住所</label>
        <div class="col-6">
          <%= address.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0",class:"form-control" %>
        </div>
      </div>
      <div class="form-group row my-4 d-flex align-items-center">
        <label for="address_name" class="col-3 col-form-label">宛名</label>
        <div class="col-3 mr-5">
          <%= address.text_field :name, placeholder: "令和道子",class:"form-control" %>
        </div>
          <%= address.submit '新規登録', class:"btn btn-success col-2 ml-5" %>
      </div>
      <% end %>
    <div class="col-9 pt-5">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th class="col-1 border-dark">郵便番号</th>
            <th class="col-3 border-dark">住所</th>
            <th class="col-1 border-dark">宛名</th>
            <th class="col-2 border-dark"></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td class="align-middle border-dark"><%= address.postal_code %></td>
              <td class="align-middle border-dark"><%= address.address %></td>
              <td class="align-middle border-dark"><%= address.name %></td>
              <td class="d-flex justify-content-center border-dark">
                <%= link_to '編集する', edit_address_path(address.id), class:"btn btn-success mr-2" %>
                <%= link_to "削除する", address_path(address.id), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-danger destroy" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>