<div class='container'>
  <div class='row'>
    <div class="col-md-11 offset-md-1">
      <div class="col-3 h4 mb-2 bg-light text-black text-center">ログイン</div>
      <div class="col-4 h7 mb-2 bg-light text-black text-center">会員の方はこちらからログイン</div>
      <%#= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= form_with model: @customer, url: customer_session_path do |f| %>
      <div class="row justify-content-center">
        <div class="field col-2">
          <%= f.label "メールアドレス"%>
        </div>
        <div class="field col-6">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "email form-control mb-2" %>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="field col-2">
          <%= f.label :"パスワード" %>
        </div>
        <div class="field col-6">
          <%= f.password_field :password, autocomplete: "current-password", class: "password form-control mb-2" %>
        </div>
      </div>
        <!--<% if devise_mapping.rememberable? %>-->
        <!--  <div class="field">-->
        <!--    <%= f.check_box :remember_me %>-->
        <!--    <%= f.label :remember_me %>-->
        <!--  </div>-->
        <!--<% end %>-->
        <div class="row justify-content-center">
        <div class="actions col-3">
          <%= f.submit "ログイン" ,class: 'btn btn-sm btn-primary btn-block' %>
        </div>
        </div>
      <% end %>
      <div class="col-4 h7 mb-2 bg-light text-black text-center">会員登録がお済みでない方</div>
      <div class="row justify-content-center">
      <%= render "public/shared/links" %>から新規登録を行ってください。
      </div>
    </div>
  </div>
</div>